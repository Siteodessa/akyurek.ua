<script>
    var lama = new lama('.lama-container', {
        pagination: '.lama-pagination',
        nextButton: '.lama-button-next',
        prevButton: '.lama-button-prev',
        paginationClickable: true,
        spaceBetween: 30,
        centeredSlides: true,autoplayDisableOnInteraction: false,
autoplay: 6000,
loop: true,
height: 550,
        'onInit': function(){
setTimeout(function(){jQuery('.lama-container').addClass('round2');}, 150); 
setTimeout(function(){
jQuery('.lama-container').removeClass('round2');  
 }, 15300);         
    }
    });
lama.on('slideChangeStart', function () {
setTimeout(function(){jQuery('.lama-container').addClass('round2'); }, 750);  
setTimeout(function(){
jQuery('.lama-container').removeClass('round2'); 
 }, 5500);          });
</script>